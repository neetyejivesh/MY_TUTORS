<h1>my booking list</h1>
<div class="d-flex row justify-content-center">
  <% @bookings.each do |booking| %>
    <% if (booking.user_id == current_user.id) %>
      <div class="col-lg-2 h-5 justify-content-center m-2">
        <div class="card bg-light">
          <div class="card-body">
            <h5 class="card-title"><%= booking.course.name %> </h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"> Location: <%= booking.course.title %></li>
            <li class="list-group-item"> schedule date: <%= booking.start_date %></li>
            <li class="list-group-item"> schedule date: <%= booking.end_date %></li>
          </ul>
        </div>
      </div>
  <% end %>
  <div class="card-body d-flex justify-content-center">
    <%= link_to "Back To course List",  courses_path, class: "btn btn-booknow card-link"%>
    <%= link_to "Home",  root_path, class: "btn btn-booknow card-link"%>
  </div>
</div>